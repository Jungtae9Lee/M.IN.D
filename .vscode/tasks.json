{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Python",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "${config:python.pythonPath}",
            "type": "shell",
            "args": [
                "${file}"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^\\s+File \"(.*?)\", line ([0-9]+)[,]?.+?$",
                        "line": 2,
                        "file": 1,
                        "message": 0
                    },
                    {
                        "regexp": "^\\s+(.+?)$",
                        "code": 1
                    }
                ]
            }
        }
    ]
}